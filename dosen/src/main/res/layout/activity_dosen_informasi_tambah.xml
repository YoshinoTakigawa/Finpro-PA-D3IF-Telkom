<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".views.activities.adds.DosenInformasiTambahActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_big">

        <ImageView
            android:layout_width="@dimen/dimen_profil_photo"
            android:layout_height="@dimen/dimen_profil_photo"
            android:src="@drawable/ic_announcement"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_line"
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_date"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_big"
            android:background="@drawable/box_border"
            android:textSize="@dimen/text_size_title_small"
            android:text="@string/dummy_tanggal"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:layout_marginStart="@dimen/dimen_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_informasi"
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Masukkan Informasi"/>

        <CheckBox
            android:layout_marginStart="@dimen/dimen_small"
            android:layout_marginTop="@dimen/dimen_medium"
            android:id="@+id/act_dsn_info_check_bimbingan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_mahasiswa_bimbingan"
            android:layout_above="@id/act_dsn_info_check_review"/>

        <CheckBox
            android:layout_marginStart="@dimen/dimen_small"
            android:layout_marginBottom="@dimen/dimen_big"
            android:id="@+id/act_dsn_info_check_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_mahasiswa_monev"
            android:layout_above="@id/act_dsn_info_button_simpan"/>

        <Button
            android:id="@+id/act_dsn_info_button_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_click_simpan"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/box_border_button_action"/>

    </LinearLayout>

</ScrollView>