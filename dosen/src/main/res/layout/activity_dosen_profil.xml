<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/circle_profile_header"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/act_dsn_profil_foto"
            android:background="@drawable/circle_border_photo_profil"
            android:layout_width="@dimen/dimen_profil_photo"
            android:layout_height="@dimen/dimen_profil_photo"
            android:src="@drawable/ic_dummy_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_big"/>

        <TextView
            android:id="@+id/act_dsn_profil_nama"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium"
            android:text="@string/dummy_dosen_pembimbing"
            android:textStyle="bold"
            android:textColor="@color/colorTextWhite"
            android:layout_below="@+id/act_dsn_profil_foto"/>

        <TextView
            android:id="@+id/act_dsn_profil_kode"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium"
            android:text="@string/dummy_dosen_kode"
            android:textStyle="bold"
            android:textColor="@color/colorTextWhite"
            android:layout_below="@+id/act_dsn_profil_nama"/>

        <LinearLayout
            android:layout_below="@+id/act_dsn_profil_kode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_big_super"
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_big"
            android:background="@drawable/circle_profile_body">

            <LinearLayout
                style="@style/profile_all_textview_container">


                <TextView
                    android:text="@string/text_profil_detail_nip"
                    style="@style/profile_all_textview_subtitle"/>

                <TextView
                    android:id="@+id/act_dsn_profil_nip"
                    tools:text="@string/dummy_anggota_nim_2"
                    style="@style/profile_all_textview_content"/>

            </LinearLayout>

            <View
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_line"
                android:background="@color/colorBackground"/>

            <LinearLayout
                style="@style/profile_all_textview_container">


                <TextView
                    android:text="@string/text_profil_detail_email"
                    style="@style/profile_all_textview_subtitle"/>

                <TextView
                    android:id="@+id/act_dsn_profil_email"
                    tools:text="@string/dummy_status_dosen"
                    style="@style/profile_all_textview_content"/>

            </LinearLayout>

            <View
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_line"
                android:background="@color/colorBackground"/>

            <LinearLayout
                style="@style/profile_all_textview_container">

                <TextView
                    android:text="@string/text_profil_detail_notelp"
                    style="@style/profile_all_textview_subtitle"/>

                <TextView
                    android:id="@+id/act_dsn_profil_kontak"
                    tools:text="@string/dummy_status_dosen"
                    style="@style/profile_all_textview_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_line"
                android:background="@color/colorBackground"/>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>