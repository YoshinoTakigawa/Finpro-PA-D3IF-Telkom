<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/circle_profile_header"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/act_dsn_profil_foto"
        android:background="@drawable/circle_border_photo_profil"
        android:layout_width="@dimen/dimen_profil_photo"
        android:layout_height="@dimen/dimen_profil_photo"
        android:src="@drawable/ic_dummy_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_big"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_camera"
        android:padding="@dimen/dimen_medium"
        android:background="@drawable/circle_image_edit_foto"
        android:layout_alignEnd="@id/act_dsn_profil_foto"/>

    <TextView
        android:id="@+id/act_dsn_profil_nama"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_medium"
        android:text="@string/dummy_dosen_pembimbing"
        android:textStyle="bold"
        android:textColor="@color/colorTextWhite"
        android:layout_below="@+id/act_dsn_profil_foto"/>

    <LinearLayout
        android:padding="@dimen/dimen_big_ultra"
        android:layout_below="@+id/act_dsn_profil_nama"
        android:layout_above="@id/text_d3rpla"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_big_ultra"
        android:layout_marginLeft="@dimen/dimen_big"
        android:layout_marginRight="@dimen/dimen_big"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dimen_big"
        android:background="@drawable/circle_profile_body">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_profil_detail_nip"/>

            <EditText
                android:id="@+id/act_dsn_profil_nip"
                android:layout_width="@dimen/dimen_weight"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_marginLeft="@dimen/dimen_big_super"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_title_small"
                android:layout_height="wrap_content"
                android:text="@string/dummy_anggota_nim_2"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/dimen_big"
            android:layout_marginLeft="@dimen/dimen_big"
            android:background="@color/colorPrimary"/>


        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_marginTop="@dimen/dimen_big_ultra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text_size_small"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_profil_detail_email"/>

            <EditText
                android:id="@+id/act_dsn_profil_email"
                android:layout_width="@dimen/dimen_weight"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_marginLeft="@dimen/dimen_big"
                android:text="@string/dummy_status_dosen"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_title_small"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/dimen_big"
            android:layout_marginLeft="@dimen/dimen_big"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_marginTop="@dimen/dimen_big_ultra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text_size_small"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_profil_detail_notelp"/>

            <EditText
                android:id="@+id/act_dsn_profil_kontak"
                android:layout_width="@dimen/dimen_weight"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_small"
                android:textSize="@dimen/text_size_title_small"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="@string/dummy_status_dosen"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/dimen_big"
            android:layout_marginLeft="@dimen/dimen_big"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


    <TextView
        android:textColor="@color/colorTextBlack"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_d3rpla"
        android:textSize="@dimen/text_size_small"
        android:layout_above="@id/text_telkom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_d3rpla"/>

    <TextView
        android:textColor="@color/colorTextBlack"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/text_telkom"

        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_telkomuniversity"
        android:layout_marginBottom="@dimen/dimen_medium"/>


</RelativeLayout>