<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_big">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="@dimen/dimen_profil_photo"
        android:layout_height="@dimen/dimen_profil_photo"
        android:layout_marginBottom="@dimen/dimen_big_ultra"
        android:src="@drawable/ic_announcement"/>

    <TextView
        android:textSize="@dimen/text_size_title_small"
        android:textColor="@color/colorPrimary"
        android:text="@string/textview_judul_bimbingan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/act_dsn_mhs_bimbingan_textview_tanggal"
        android:textSize="@dimen/text_size_title_small"
        android:textColor="@color/colorTextBlack"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="@dimen/dimen_medium"
        android:text="Pilih Tanggal"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_medium"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="@dimen/dimen_big"/>


    <TextView
        android:textSize="@dimen/text_size_title_small"
        android:textColor="@color/colorPrimary"
        android:text="@string/textview_judul_bimbingan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <EditText
        android:layout_marginTop="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:hint="@string/hint_judul_bimbingan"
        android:inputType="textMultiLine"
        android:id="@+id/act_dsn_info_edittext_judul_bimbingan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/text_size_title_small"
        android:textColor="@color/colorPrimary"
        android:text="@string/textview_review_bimbingan"
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <EditText
        android:layout_marginTop="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_big_ultra"
        android:hint="@string/hint_review_bimbingan"
        android:inputType="textMultiLine"
        android:id="@+id/act_dsn_info_edittext_konten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/act_dsn_info_button_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_click_simpan"
        android:textColor="@color/colorTextWhite"
        android:background="@drawable/box_border_button_action"/>

</LinearLayout>

