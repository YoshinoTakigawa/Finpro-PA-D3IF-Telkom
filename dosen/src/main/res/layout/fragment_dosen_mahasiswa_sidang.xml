<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/frg_dsn_mhs_sidang_swiperefresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragments.DosenMahasiswaSidangFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dummytext"
            android:layout_marginTop="@dimen/dimen_big"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_daftar_mahasiswa_sidang"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/dummytext"
            android:id="@+id/frg_dsn_mhs_sidang_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/content_item_dosen_mahasiswa_sidang">
        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progressbar_list"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>