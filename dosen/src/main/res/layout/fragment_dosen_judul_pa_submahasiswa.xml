<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/frg_dsn_judul_mhs_swiperefresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragments.DosenJudulSubmahasiswaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Empty View -->
        <RelativeLayout
            android:id="@+id/view_emptyview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <include layout="@layout/content_list_empty"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dummytext"
            android:layout_marginTop="@dimen/dimen_big"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_daftar_judul_pa_mahasiswa"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/dummytext"
            android:id="@+id/frg_dsn_judul_mhs_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/content_item_dosen_judul_pa_submahasiswa">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>