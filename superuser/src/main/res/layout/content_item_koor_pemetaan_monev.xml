<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_medium"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:background="@color/colorBackgroundNotYet"
        android:id="@+id/container_content"
        android:paddingTop="@dimen/dimen_medium"
        android:paddingBottom="@dimen/dimen_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textColor="@color/colorTextBlack"
            android:text="@string/title_judulpa"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ctn_koor_pemetaan_textview_judul"
            android:text="@string/dummy_pa_judul"
            android:textColor="@color/colorPrimary"
            android:maxLines="2"/>


        <View
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground"/>

        <TextView
            android:textSize="@dimen/text_size_default"
            android:textColor="@color/colorTextBlack"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_dosen_reviewer"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:maxLines="1"
            android:id="@+id/ctn_koor_pemetaan_textview_judul_reviewer"
            android:text="@string/dummy_dosen_pembimbing"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
