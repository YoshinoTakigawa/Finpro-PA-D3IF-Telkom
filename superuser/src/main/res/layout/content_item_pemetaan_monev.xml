<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_medium"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:layout_marginTop="@dimen/dimen_medium"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_medium"
            android:layout_marginRight="@dimen/dimen_big"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_judulpa"
                android:layout_marginBottom="@dimen/dimen_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:id="@+id/ctn_koor_pemetaan_textview_judul"
                    android:text="@string/dummy_pa_judul"
                    android:layout_weight="2"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dimen_medium"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_kategori_judul_pa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ctn_koor_pemetaan_textview_kategori"
                android:text="@string/dummy_kategori"
                android:layout_marginTop="@dimen/dimen_small"
                android:layout_marginBottom="@dimen/dimen_small"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_medium"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_medium"
            android:layout_marginRight="@dimen/dimen_medium"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_dosen_pembimbing"
                android:layout_marginBottom="@dimen/dimen_medium"/>

            <TextView
                android:maxLines="2"
                android:id="@+id/ctn_koor_pemetaan_textview_dosenbimbing"
                android:text="@string/dummy_dosen_pembimbing"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/dimen_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_dosen_reviewer"
                android:layout_marginBottom="@dimen/dimen_medium"/>

            <TextView
                android:maxLines="2"
                android:id="@+id/ctn_koor_pemetaan_textview_dosenreview"
                android:text="@string/dummy_dosen_pembimbing"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
