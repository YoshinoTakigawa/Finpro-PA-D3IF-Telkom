<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.editors.KoorJudulPaSubdosenTambahActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_big">

        <ImageView
            android:layout_width="@dimen/dimen_profil_photo"
            android:layout_height="@dimen/dimen_profil_photo"
            android:src="@drawable/ic_judul_pa"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_big_ultra"/>

        <TextView
            android:layout_marginStart="@dimen/dimen_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Dosen"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/act_koor_judul_pa_edittext_nama_dosen"
            android:entries="@array/nama_dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_small"
            android:layout_marginRight="@dimen/dimen_small"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/dimen_big"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_small"
            android:text="Judul Proyek Akhir"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:id="@+id/act_koor_judul_pa_edittext_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="@dimen/dimen_small"
            android:layout_marginLeft="@dimen/dimen_small"
            android:background="@android:color/transparent"
            android:hint="Masukkan Judul PA"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_small"
            android:layout_marginRight="@dimen/dimen_small"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/dimen_big"/>
        <TextView
            android:layout_marginStart="@dimen/dimen_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Proyek Akhir"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/act_koor_judul_pa_edittext_kategori"
            android:entries="@array/kategori_proyek_akhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_small"
            android:layout_marginRight="@dimen/dimen_small"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/dimen_big"/>

        <TextView

            android:layout_marginStart="@dimen/dimen_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Proyek Akhir"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:id="@+id/act_koor_judul_pa_edittext_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginLeft="@dimen/dimen_small"
            android:layout_marginRight="@dimen/dimen_small"
            android:background="@android:color/transparent"
            android:hint="Masukkan Deskripsi Judul PA"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_small"
            android:layout_marginRight="@dimen/dimen_small"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/dimen_big"/>

        <Button
            android:id="@+id/act_koor_judul_pa_button_simpan"
            android:layout_marginTop="@dimen/dimen_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Judul"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/box_border_button_action"/>

    </LinearLayout>
</ScrollView>