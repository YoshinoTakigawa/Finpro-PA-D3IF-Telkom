<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/dimen_medium"
    android:layout_marginEnd="@dimen/dimen_medium"
    android:layout_marginTop="@dimen/dimen_medium"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_big"
        android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_kategori"
                android:layout_toStartOf="@id/ctn_koor_button_hapus"
                android:textColor="@color/colorTextBlack"/>
            <TextView
                android:layout_below="@id/text_view_kategori"
                android:layout_toStartOf="@id/ctn_koor_button_hapus"
                android:id="@+id/ctn_koor_monev_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorPrimary"/>
            <View
                android:id="@+id/view_atur"
                android:layout_toStartOf="@id/ctn_koor_button_hapus"
                android:layout_below="@id/ctn_koor_monev_kategori"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/dimen_big"
                android:background="@color/colorBackground"
                android:layout_marginTop="@dimen/dimen_small"
                android:layout_marginBottom="@dimen/dimen_small"/>
            <TextView
                android:id="@+id/text_view_bimbingan"
                android:layout_toStartOf="@id/ctn_koor_button_hapus"
                android:layout_below="@id/view_atur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_minimal_jumlah_bimbingan"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorTextBlack"/>
            <TextView
                android:layout_toStartOf="@id/ctn_koor_button_hapus"
                android:layout_below="@id/text_view_bimbingan"
                android:id="@+id/ctn_koor_monev_jumlah_bimbingan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorPrimary"/>


        <ImageView
            android:id="@+id/ctn_koor_button_hapus"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_medium"
            android:src="@drawable/ic_kategori_delete"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>