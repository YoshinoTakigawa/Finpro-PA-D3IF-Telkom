<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragments.KoorJudulFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Empty View -->
        <RelativeLayout
            android:id="@+id/view_emptyview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <include layout="@layout/content_list_empty"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_medium">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_big"
            android:textColor="@color/colorTextBlack"
            android:text="@string/text_dosen_pembimbing"
            android:layout_marginTop="@dimen/dimen_medium"/>
        <Spinner
            android:layout_below="@id/text"
            android:id="@+id/spinner_dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:fadeScrollbars="true"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginStart="@dimen/dimen_medium"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_big"
            android:layout_marginRight="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_big"
            android:background="@color/colorTextBlack"
            android:layout_below="@id/spinner_dosen"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/line1"
            android:id="@+id/frg_koor_judul_dsn_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dimen_medium"
            tools:listitem="@layout/content_item_koor_pa"/>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>