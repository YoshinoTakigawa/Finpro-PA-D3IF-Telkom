<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/dimen_medium"
    android:layout_marginEnd="@dimen/dimen_medium"
    android:layout_marginTop="@dimen/dimen_medium"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_big"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ctn_koor_judul_kategori"
            android:layout_width="match_parent"
            android:layout_toStartOf="@id/ctn_koor_button_hapus"
            android:layout_height="wrap_content"
            tools:text="@string/dummy"
            android:drawablePadding="@dimen/dimen_medium"
            android:drawableStart="@drawable/ic_content_kategori_judul"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/colorTextBlack"/>

        <ImageView
            android:id="@+id/ctn_koor_button_hapus"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_medium"
            android:src="@drawable/ic_kategori_delete"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>