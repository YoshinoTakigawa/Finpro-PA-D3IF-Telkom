<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_list_all_clicked">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:orientation="vertical">

        <TextView
            android:text="@string/title_judulpa"
            style="@style/content_all_list_title" />

        <TextView
            android:id="@+id/ctn_koor_pa_textview_judul"
            style="@style/content_all_list_sub_title" />

        <View
            style="@style/view_all_line_horizontal"/>

        <TextView
            android:text="@string/text_kategori"
            style="@style/content_all_list_title"/>

        <TextView
            android:id="@+id/ctn_koor_pa_textview_kategori"
            style="@style/content_all_list_sub_title" />

    </LinearLayout>

</androidx.cardview.widget.CardView>