<androidx.cardview.widget.CardView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_medium"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_big"
            android:layout_marginRight="@dimen/dimen_big"
            android:layout_marginTop="@dimen/dimen_medium"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ctn_koor_circle_image"
                android:src="@drawable/ic_dummy_photo"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorBackground"
                style="@style/all_image_informasi"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="@dimen/text_size_title_small"
                    android:id="@+id/ctn_koor_info_textview_nama"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/dummy"/>

                <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/ctn_koor_info_textview_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy"/>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/view_all_line_horizontal"/>

        <TextView
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:textColor="@color/colorTextBlack"
            android:id="@+id/ctn_koor_info_textview_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title_small"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="@string/title_proyekakhir"/>

        <TextView
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:textColor="@color/colorTextBlack"
            android:id="@+id/ctn_koor_info_textview_isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/dummyLong"/>

        <TextView
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_titiktitik"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>