<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- User Activity -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Penggunaan Style Digunakan Jika Ada List Item tanpa Menggunakan RecyclerView-->

    <!-- Style untuk textview fragment_mahasiswa_pa bagian dosen -->
    <style name="textview_pa_color_primary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/dimen_big</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <!-- Style untuk textview fragment_mahasiswa_pa bagian dosen -->
    <style name="textview_pa_color_primary_icon">
        <item name="android:drawableLeft">@drawable/ic_person</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawablePadding">@dimen/dimen_drawable_padding</item>
        <item name="android:layout_marginStart">@dimen/dimen_big</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <!-- Style untuk textview fragment_mahasiswa_pa bagian dosen -->
    <style name="textview_pa_color_accent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_big</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_big</item>
    </style>

    <!-- Style untuk textview fragment_mahasiswa_pa bagian dosen -->
    <style name="textview_pa_color_accent_small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_big</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <!-- Style untuk textview fragment_mahasiswa_pa bagian NIM -->
    <style name="textview_pa_color_black">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_big</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <!-- Style untuk textview fragment_mahasiswa_pa bagian NIM -->
    <style name="textview_pa_color_black_small">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_marginStart">@dimen/dimen_big</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>


    <!-- Style untuk textview_nama content_item_dosen_mahasiswa -->
    <style name="textwiew_item_dosen_mahasiswa_nama">
        <item name="android:textSize">@dimen/text_size_title_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style untuk textview_nim_kelompok content_item_dosen_mahasiswa -->
    <style name="textwiew_item_dosen_mahasiswa_nim_kelompok">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <!-- Style untuk circle_view content_item_dosen_mahasiswa -->
    <style name="image_item_dosen_mahasiswa">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/dimen_profil_photo_list</item>
        <item name="android:layout_height">@dimen/dimen_profil_photo_list</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big</item>
    </style>

    <!-- Style untuk textview content_item_judulpa -->
    <style name="textview_item_list_judul_pa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>


    </style>

    <!-- Style untuk textview content_item_judulpa -->
    <style name="textview_item_list_judul_kategori">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_drawable_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Style untuk circle_view content_item_dosen_mahasiswa -->
    <style name="image_item_info">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/dimen_profil_photo_list_info</item>
        <item name="android:layout_height">@dimen/dimen_profil_photo_list_info</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big</item>
    </style>

    <dimen name="dimen_drawable_padding">5dip</dimen>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
