    <android.support.design.widget.BottomNavigationView
        android:id="@+id/act_mhs_home_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/navbottom_selector_icon_text"
        app:itemTextColor="@drawable/navbottom_selector_icon_text"
        app:itemBackground="@drawable/navbottom_selector_background"
        app:menu="@menu/menu_bottom_navigation_mahasiswa" />

    <android.support.v4.view.ViewPager
        android:id="@+id/act_mhs_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/act_mhs_home_bottom_navigation"
        android:layout_alignParentTop="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/act_mhs_home_bottom_navigation"
