    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginLeft="@dimen/dimen_medium"
            android:layout_marginRight="@dimen/dimen_medium">

            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_big"
                android:layout_marginRight="@dimen/dimen_big"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ctn_mhs_mhs_bimbingan_circle_image"
                    android:src="@drawable/ic_dummy_photo"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorBackground"
                    style="@style/image_item_dosen_mahasiswa"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:textSize="@dimen/text_size_title_small"
                        android:id="@+id/act_mhs_info_detail_textview_dosen"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/dummy"/>

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:id="@+id/act_mhs_info_detail_textview_tanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="@dimen/min_height_info"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium"
                android:layout_marginStart="@dimen/dimen_big"
                android:layout_marginEnd="@dimen/dimen_big">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_informasi"/>

                <View
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBackground"
                    android:layout_marginBottom="@dimen/dimen_medium"/>

                <TextView
                    android:textColor="@color/colorTextBlack"
                    android:id="@+id/act_mhs_info_detail_textview_isi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dummyLong" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>