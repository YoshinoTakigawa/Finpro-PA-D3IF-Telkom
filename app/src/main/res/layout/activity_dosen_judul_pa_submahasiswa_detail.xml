<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_medium"
        tools:context=".views.activities.details.DosenJudulPaSubmahasiswaDetailActivity">

        <ImageView
            android:layout_width="@dimen/dimen_profil_photo"
            android:layout_height="@dimen/dimen_profil_photo"
            android:src="@drawable/ic_judul_pa_info"
            android:layout_gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Pengajuan"
                    android:textSize="@dimen/text_size_title_medium"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack"
                    android:text="@string/dummy_tanggal"
                    android:drawablePadding="@dimen/dimen_drawable_padding"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_date"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dimen_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Kelompok"
                    android:textSize="@dimen/text_size_title_medium"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_mahasiswa_kelompok"
                    android:drawablePadding="@dimen/dimen_drawable_padding"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:drawableLeft="@drawable/ic_content_judul_pa_kelompok"/>

                <View
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_line"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Anggota"
                    android:textSize="@dimen/text_size_title_medium"

                    android:drawablePadding="@dimen/dimen_drawable_padding"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:text="@string/dummy_anggota_kelompok_2"

                    android:drawablePadding="@dimen/dimen_drawable_padding"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:text="@string/dummy_anggota_kelompok_1"

                    android:drawablePadding="@dimen/dimen_drawable_padding"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium">
            <LinearLayout
                android:layout_margin="@dimen/dimen_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Proyek Akhir"
                    android:textSize="@dimen/text_size_title_medium"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_content_judul_pa_judul"
                    android:text="@string/dummy_pa_judul"
                    android:textSize="16sp"

                    android:drawablePadding="@dimen/dimen_drawable_padding"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextBlack"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium">

            <LinearLayout
                android:layout_margin="@dimen/dimen_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Judul Proyek Akhir"
                    android:textSize="@dimen/text_size_title_medium"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dummyLong"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_big"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terima"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/box_border_button_acc"/>

            <Button
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/box_border_button_tolak"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>