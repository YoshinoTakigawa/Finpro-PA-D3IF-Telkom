<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_big"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_medium"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium"
            android:layout_weight="1"
            android:text="Nama Kelompok"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/ctn_mhs_judul_pa_dosen_pengajuan_textview_kelompok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium"
            android:layout_weight="1"
            android:text="@string/dummy_mahasiswa_kelompok"
            android:textSize="16sp"
            android:textColor="@color/colorTextBlack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_medium"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium"
            android:layout_weight="1"
            android:text="Nama Anggota"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/ctn_mhs_judul_pa_dosen_pengajuan_textview_anggota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_person"
            android:text="@string/dummy_anggota_kelompok_2"
            android:textSize="16sp"
            android:textColor="@color/colorTextBlack"/>
            <TextView
                android:id="@+id/ctn_mhs_judul_pa_dosen_pengajuan_textview_anggota2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_medium"
                android:drawableLeft="@drawable/ic_person"
                android:layout_weight="1"
                android:text="@string/dummy_anggota_kelompok_1"
                android:textSize="16sp"
                android:textColor="@color/colorTextBlack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/ctn_mhs_judul_pa_dosen_pengajuan_btn_terima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/dimen_medium"
        android:text="Terima"
        android:textColor="@color/colorTextWhite"
        android:background="@drawable/box_border_button_acc"/>
        <Button
            android:id="@+id/ctn_mhs_judul_pa_dosen_pengajuan_btn_tolak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium"
            android:layout_weight="1"
            android:text="Tolak"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/box_border_button_tolak"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
