<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".views.activities.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/circle_login_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_marginTop="@dimen/dimen_big_ultra"
        android:layout_centerHorizontal="true"
        android:id="@+id/ic_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_apps" />

    <RelativeLayout
        android:id="@+id/login_contain"
        android:layout_above="@id/prodi"
        android:layout_below="@id/ic_logo"
        android:layout_marginTop="@dimen/dimen_big_ultra"
        android:padding="@dimen/dimen_big"
        android:layout_marginRight="@dimen/dimen_big_super"
        android:layout_marginLeft="@dimen/dimen_big_super"
        android:background="@drawable/circle_login_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_big_super"
            android:orientation="vertical">

            <EditText
                android:id="@+id/act_main_edittext_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_big"
                android:background="@drawable/box_border"
                android:hint="@string/hint_id_pengguna"
                android:maxLines="1"
                android:padding="@dimen/dimen_big"
                android:singleLine="true"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/act_main_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_big"
                android:background="@drawable/box_border"
                android:hint="@string/hint_kata_sandi"
                android:imeActionId="6"
                android:imeActionLabel="@string/button_click_masuk"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/dimen_big"
                android:singleLine="true" />

            <Button
                android:id="@+id/act_main_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_border_button_action"
                android:text="@string/button_click_masuk"
                android:textColor="@color/colorTextWhite" />

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_small"
                    android:text="@string/text_lupa_kata_sandi" />

                <TextView
                    android:id="@+id/act_main_textview_klikdisini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_klik_disini"
                    android:textColor="@color/colorTextBlack"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_small"
        android:layout_margin="@dimen/dimen_big"
        android:id="@+id/prodi"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_long"/>

</RelativeLayout>