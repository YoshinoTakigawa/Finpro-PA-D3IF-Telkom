<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_medium"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium"
    android:background="@color/colorBackgroundWhite">

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_big"
        android:layout_marginTop="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ctn_dsn_mhs_bimbingan_circle_image"
            android:src="@drawable/ic_dummy_photo"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorBackground"
            style="@style/image_item_dosen_mahasiswa"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ctn_dsn_mhs_bimbingan_textview_nama"
                style="@style/textwiew_item_dosen_mahasiswa_nama"
                android:text="@string/dummy_mahasiswa_nama"/>

            <TextView
                android:id="@+id/ctn_dsn_mhs_bimbingan_textview_nim"
                style="@style/textwiew_item_dosen_mahasiswa_nim_kelompok"
                android:text="@string/dummy_mahasiswa_nim"/>

            <TextView
                android:id="@+id/ctn_dsn_mhs_bimbingan_textview_kelompok"
                style="@style/textwiew_item_dosen_mahasiswa_nim_kelompok"
                android:text="@string/dummy_mahasiswa_kelompok"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>