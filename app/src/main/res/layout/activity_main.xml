<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.MainActivity">

    <ImageView
        android:layout_above="@+id/container_login"
        android:layout_marginBottom="@dimen/dimen_big_super"
        android:layout_centerHorizontal="true"
        android:id="@+id/ic_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_apps" />

    <LinearLayout
        android:id="@+id/container_login"
        android:padding="@dimen/dimen_big"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/act_main_edittext_username"
                android:padding="@dimen/dimen_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_id_pengguna"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/box_border"
                android:textColor="@color/colorTextBlack"
                android:layout_marginBottom="@dimen/dimen_big"/>

            <EditText
                android:id="@+id/act_main_edittext_password"
                android:padding="@dimen/dimen_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_kata_sandi"
                android:imeActionId="6"
                android:imeActionLabel="@string/button_click_masuk"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/box_border"
                android:layout_marginBottom="@dimen/dimen_big"/>

        <Button
            android:id="@+id/act_main_button_login"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_click_masuk"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/box_border_button_action"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/container_login"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_lupa_kata_sandi"
            android:layout_marginEnd="@dimen/dimen_small"/>

        <TextView
            android:id="@+id/act_main_textview_klikdisini"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_klik_disini"/>

    </LinearLayout>

    <View
        android:layout_above="@+id/prodi"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBackground"/>

    <TextView
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_small"
        android:layout_margin="@dimen/dimen_big"
        android:id="@+id/prodi"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_long"/>

</RelativeLayout>