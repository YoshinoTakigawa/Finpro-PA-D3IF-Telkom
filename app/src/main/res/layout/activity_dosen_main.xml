<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DosenMainActivity"
    android:background="@color/colorBackground">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/act_dsn_home_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/navbottom_selector_icon_text"
        app:itemTextColor="@drawable/navbottom_selector_icon_text"
        app:itemBackground="@drawable/navbottom_selector_background"
        app:menu="@menu/menu_bottom_navigation_dosen"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/act_dsn_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/act_dsn_home_bottom_navigation"
        android:layout_alignParentTop="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/act_dsn_home_bottom_navigation"
        android:background="@drawable/box_shadow"/>

</RelativeLayout>