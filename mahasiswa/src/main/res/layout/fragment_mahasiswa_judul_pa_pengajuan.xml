<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mahasiswa_judul_pa_submahasiswa_pengajuan">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/dimen_medium"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="200dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="@dimen/dimen_big"
                    android:layout_marginEnd="@dimen/dimen_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tata Cara Pengajuan Judul"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/text_size_title_medium"/>

                <View
                    android:layout_marginTop="@dimen/dimen_small"
                    android:layout_marginBottom="@dimen/dimen_small"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"/>

                <TextView
                    android:layout_marginStart="@dimen/dimen_big"
                    android:layout_marginEnd="@dimen/dimen_big"
                    android:layout_marginBottom="@dimen/dimen_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. "
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextBlack"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/frg_mhs_pa_pengajuan_fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dimen_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fab_add"/>

</RelativeLayout>