<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activities.MahasiswaBimbinganListDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_big"
        android:layout_marginTop="@dimen/dimen_big"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="@dimen/dimen_medium"
        android:text="@string/dummy_tanggal"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_medium"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Bimbingan"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginLeft="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium"
                android:textSize="@dimen/text_size_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimen_medium"
                android:layout_marginRight="@dimen/dimen_medium"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBlack"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginLeft="@dimen/dimen_big"
                android:layout_marginBottom="@dimen/dimen_medium"
                android:text="Review bab 1"
                android:textSize="@dimen/text_size_title_medium"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_medium"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_medium"
                android:text="Review Bimbingan"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_medium"
                android:textColor="@color/colorTextBlack"
                android:layout_marginBottom="@dimen/dimen_medium"
                android:textSize="@dimen/text_size_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimen_medium"
                android:layout_marginRight="@dimen/dimen_medium"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBlack"
                android:layout_marginRight="@dimen/dimen_medium"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginLeft="@dimen/dimen_big"
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:text="@string/dummyLong"
                android:textSize="@dimen/text_size_title_medium"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>