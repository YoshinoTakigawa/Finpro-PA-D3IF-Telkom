<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/dimen_medium"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium">


        <LinearLayout
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"
            android:layout_marginStart="@dimen/dimen_big"
            android:layout_marginEnd="@dimen/dimen_big"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_judulpa"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/colorTextBlack"/>

            <TextView
                android:id="@+id/ctn_judul_pa_arsip_textview_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_default"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_kategori"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/colorTextBlack"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ctn_judul_pa_arsip_textview_kategori"
                android:text="@string/dummy"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_default"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>