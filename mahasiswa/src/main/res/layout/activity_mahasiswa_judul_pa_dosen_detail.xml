<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.activities.MahasiswaJudulPaDosenDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_margin="@dimen/dimen_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_nama_dosen_pembimbing"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/frg_mhs_pa_cardview_bimbingan"
                android:clickable="true"
                android:focusable="true"
                android:elevation="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_dosen_pembimbing"/>

                    <TextView
                        android:id="@+id/frg_mhs_pa_textview_dsn_pembimbing"
                        style="@style/textview_pa_color_primary"
                        android:text="@string/dummy_dosen_pembimbing"
                        android:layout_marginBottom="@dimen/dimen_medium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_margin="@dimen/dimen_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_proyek_akhir"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_judul_proyek_akhir"/>

                    <TextView
                        android:id="@+id/frg_mhs_pa_textview_judulpa"
                        style="@style/textview_pa_color_primary"
                        android:text="@string/dummy_pa_judul"/>

                    <View
                        android:layout_marginTop="@dimen/dimen_medium"
                        android:layout_marginBottom="@dimen/dimen_medium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_view_line"
                        android:background="@color/colorBackground"/>

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_kategori"/>

                    <TextView
                        android:id="@+id/frg_mhs_pa_textview_kelompokpa"
                        android:text="@string/dummy_kategori"
                        style="@style/textview_pa_color_black"
                        android:layout_marginBottom="@dimen/dimen_medium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_margin="@dimen/dimen_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_deskripsi"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="@dimen/dimen_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_deskripsi_judul_pa"/>

                    <TextView
                        style="@style/textview_pa_color_black_small"
                        android:text="@string/dummyLong"
                        android:layout_marginBottom="@dimen/dimen_medium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/frg_dsn_monev_fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimen_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorBackgroundGreen"
        android:src="@drawable/ic_ajukan_judul"/>

</RelativeLayout>