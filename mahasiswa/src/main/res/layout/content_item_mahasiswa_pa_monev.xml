<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/dimen_medium"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_height_list_bimbingan"
        android:layout_margin="@dimen/dimen_medium">

        <TextView
            android:id="@+id/ctn_mhs_pa_monev_textview_tanggal"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_tanggal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackground"
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ctn_mhs_pa_monev_textview_komentar"
                android:layout_width="@dimen/dimen_weight"
                android:textColor="@color/colorTextBlack"
                android:layout_height="wrap_content"
                android:text="@string/dummyLong"
                android:layout_weight="1"
                android:maxLines="3" />

            <TextView
                android:id="@+id/ctn_mhs_pa_monev_textview_nilai"
                android:layout_width="@dimen/dimen_circle_background"
                android:layout_height="@dimen/dimen_circle_background"
                android:text="@string/dummy_nilai_monev"
                android:textSize="@dimen/text_size_title_big"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_border_nilai_monev"
                android:layout_marginStart="@dimen/dimen_medium"
                android:textColor="@color/colorTextWhite"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>