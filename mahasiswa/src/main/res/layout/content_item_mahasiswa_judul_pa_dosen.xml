<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/dimen_medium"
    android:layout_marginBottom="@dimen/dimen_medium"
    android:layout_marginRight="@dimen/dimen_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_big">

        <LinearLayout
            android:layout_width="@dimen/dimen_weight"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_judulpa"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/colorTextBlack"/>
            <TextView
                android:id="@+id/ctn_mhs_judul_pa_dosen_textview_judul"
                android:text="@string/dummy_pa_judul"
                style="@style/textview_item_list_judul_pa"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium"/>
            <TextView
                android:textSize="@dimen/text_size_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_kategori"
                android:textColor="@color/colorTextBlack"/>
            <TextView
                android:id="@+id/ctn_mhs_judul_pa_dosen_textview_kategori"
                android:text="@string/dummy_kategori"
                android:textSize="@dimen/text_size_default"
                style="@style/textview_item_list_judul_kategori"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"/>
        <ImageView
            android:id="@+id/ctn_mhs_judul_pa_dosen_status"
            android:layout_width="@dimen/dimen_circle_background"
            android:layout_height="@dimen/dimen_circle_background"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginStart="@dimen/dimen_big"
            android:textColor="@color/colorTextWhite"
            android:src="@drawable/ic_judul_available"
            android:background="@drawable/circle_judul_available"
            android:textSize="@dimen/text_size_title_medium"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
