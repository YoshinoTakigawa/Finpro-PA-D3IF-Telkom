            <!--android:background="@android:color/transparent"-->
            <!--android:padding="@dimen/dimen_medium"-->
            <!--android:hint="Masukkan No Telepon"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dimen_big"
            android:layout_marginLeft="@dimen/dimen_medium"
            android:layout_marginRight="@dimen/dimen_medium"
            android:background="@color/colorPrimary"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_big"
            android:text="Ajukan Judul"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/box_border_button_action"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_big"
            android:text="BATAL"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center" />
    </LinearLayout>
