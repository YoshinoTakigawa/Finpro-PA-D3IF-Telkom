<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/profile_all_header"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/act_mhs_profil_foto"
            style="@style/profile_all_photo"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/ic_camera"
            android:padding="@dimen/dimen_medium"
            android:background="@drawable/circle_image_edit_foto"
            android:layout_alignEnd="@id/act_mhs_profil_foto"/>

        <TextView
            android:id="@+id/act_mhs_profil_hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_mhs_profil_foto"
            android:textColor="@color/colorTextWhite"
            android:gravity="center"/>

        <LinearLayout
            style="@style/profile_all_container_body">

            <LinearLayout
                style="@style/profile_all_textview_container">

                <TextView
                    android:text="@string/text_profil_detail_nim"
                    style="@style/profile_all_textview_subtitle"/>

                <TextView
                    android:id="@+id/act_mhs_profil_nim"
                    tools:text="@string/dummy_anggota_nim_2"
                    style="@style/profile_all_textview_content"/>


            </LinearLayout>

            <View
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"/>


            <LinearLayout
                style="@style/profile_all_textview_container">

                <TextView
                    android:text="@string/text_nama"
                    style="@style/profile_all_textview_subtitle"/>

                <EditText
                    android:id="@+id/act_mhs_profil_nama"
                    android:background="@android:color/transparent"
                    tools:hint="@string/dummy_mahasiswa_nama"
                    style="@style/profile_all_textview_content"/>

            </LinearLayout>

            <View
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"/>

            <LinearLayout
                style="@style/profile_all_textview_container">

                <TextView
                    android:text="@string/text_angkatan"
                    style="@style/profile_all_textview_subtitle"/>

                <EditText
                    android:id="@+id/act_mhs_profil_angkatan"
                    android:background="@android:color/transparent"
                    tools:hint="@string/dummy_angkatan"
                    style="@style/profile_all_textview_content"/>


            </LinearLayout>

            <View
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"/>


            <LinearLayout
                style="@style/profile_all_textview_container">

                <TextView
                    android:text="@string/text_profil_detail_email"
                    style="@style/profile_all_textview_subtitle"/>

                <EditText
                    android:id="@+id/act_mhs_profil_email"
                    tools:hint="@string/dummy_email"
                    android:background="@android:color/transparent"
                    style="@style/profile_all_textview_content"/>

            </LinearLayout>

            <View
                android:layout_marginBottom="@dimen/dimen_big_super"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"/>

            <LinearLayout
                style="@style/profile_all_textview_container">

                <TextView
                    android:text="@string/text_profil_detail_notelp"
                    style="@style/profile_all_textview_subtitle"/>

                <EditText
                    android:id="@+id/act_mhs_profil_kontak"
                    android:background="@android:color/transparent"
                    tools:hint="@string/dummy_no_telp"
                    style="@style/profile_all_textview_content"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackground"/>

        </LinearLayout>

        <include
            layout="@layout/content_copyright_institute"/>

    </RelativeLayout>


</ScrollView>