<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/swipe_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dimen_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_marginBottom="@dimen/dimen_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tanggal_sidang"
                    android:layout_marginStart="@dimen/dimen_big"
                    android:layout_marginEnd="@dimen/dimen_big"/>

                <View
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_line"
                    android:background="@color/colorBackground"/>

                <TextView
                    android:id="@+id/tanggal_sidang"
                    style="@style/textview_pa_color_black"
                    android:text="@string/text_belum_sidang"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_margin="@dimen/dimen_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_nilai_sidang_mahasiswa"/>

        <include layout="@layout/content_activity_mahasiswa_pa_sidang_detail"/>

    </LinearLayout>

</ScrollView>
